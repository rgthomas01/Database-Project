<html>
    <head>
        {% block head %}
        <meta charset="utf-8">
        <title>Customers</title>
        <link href="../static/stylesheet.css" rel="stylesheet" />
        {% endblock %}
    </head>
    <body>
        <header>
            <h1>Three Eight Cycles Customer Records</h1>
            <nav>
                <div>
                <a href="../main.html">Home</a>
                <a href="../items/index.html">Items</a>
                <a href="../customers">Customers</a>
                <a href="../purchases/index.html">Purchases</a>
                </div>
            </nav>

        </header>
        <h2> Customer Record Results </h2>
        <table>
            <thead>
                <tr>
                    <!-- Iterate through each key in the first entry to get the
                    column name -->
                    {% for key in Customers[0].keys() %}

                    <!-- Create a <th> tag with the key inside of it, this will be
                    our header row -->
                    <th>{{ key }} </th>

                    <!-- End of this for loop -->
                    {% endfor %}
                    <th>Modify</th>
                    <th>Delete</th>

                    
                </tr>
                
                <tbody>

                <!-- Now, iterate through every person in bsg_people -->
                {% for person in Customers %}
                <tr>
                    <!-- Then iterate through every key in the current person dictionary -->
                    {% for key in person.keys() %}

                    <!-- Create a <td> element with the value of that key in it -->
                    <td>{{person[key]}}</td>
                    {% endfor %}
                    <td>
                        <form method="GET" action="/customers/update/{{Customers[0].customerId}}">
                            <input type="hidden" name="customerId" value="{{Customers[0].customerId}}"> 
                            <!-- <input type="hidden" name="customerFirstName" value=Bob> -->
                            <!-- <input type="hidden" name="customerLastName" value=Builder> -->
                            <a onclick="this.parentNode.submit();" style="color:blue">update</a>
                        </form>
                        </td>
                        <td>
                        <form method="GET" action="/customers/delete">
                            <input type="hidden" name="customerId" value="456"> 
                            <!-- <input type="hidden" name="customerFirstName" value=Bob> -->
                            <!-- <input type="hidden" name="customerLastName" value=Builder> -->
                            <a onclick="this.parentNode.submit();" style="color:blue">delete</a>
                        </form>
                        </td>
                </tr>
                {% endfor %}
        </table>
</body>
</html>